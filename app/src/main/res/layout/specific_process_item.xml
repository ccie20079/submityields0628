<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/skyblue"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkboxOfSpecificProcess"
        android:layout_width="0dp"
        android:layout_weight="0.894"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/textViewOfSeq_P_C_Record"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="left|center"
        android:text="123456789"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewOfSummaryProcess"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="left|center"
        android:text="部位/画线"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewOfSpecificProcess"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.8"
        android:gravity="left|center"
        android:text="工序"
        android:textSize="15sp"
        android:paddingLeft="3dp"
        android:paddingRight="1dp"/>

    <TextView
        android:id="@+id/textViewOfManHour"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="right|center"
        android:text="1700000"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/textViewOfLabourCost"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:text="0.01666"
        android:gravity="right|center"
        android:textSize="15sp"
        />
</LinearLayout>
